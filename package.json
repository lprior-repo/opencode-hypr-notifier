  "description": "OpenCode plugin that sends desktop notifications via notify-send for permission requests, session completions, and errors. Works with Hyprland and any Linux desktop.",
  "type": "module",
  "main": "./src/hypr-notifier.ts",
  "exports": {
    ".": {
      "import": "./src/hypr-notifier.ts",
      "types": "./src/hypr-notifier.ts"
    }
  },
  "files": [
    "src/hypr-notifier.ts"
  ],
  "keywords": [
    "opencode",
    "opencode-plugin",
    "plugin",
    "notifications",
    "hyprland",
    "desktop",
    "notify-send",
    "linux",
    "wayland"
  ],
  "scripts": {
    "test": "bun test",
    "typecheck": "bun run --bun tsc --noEmit",
    "lint": "bun run --bun biome check src/",
